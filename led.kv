<Button>
    font_size: 40
<Label>
    font_size: 40
<LedWidget>
    FloatLayout:
        Button:
            size_hint: (.35, .2)
            pos_hint: {"x": .1, "y":.1}
            id: led_on_button
            text: "Led On"
            on_release: root.turn_led_on()
        Button:
            size_hint: (.35, .2)
            pos_hint: {"x": .5, "y":.1}
            id: led_off_button
            text: "Led Off"
            on_release: root.turn_led_off()
        Label:
            size_hint: (1, .2)
            pos_hint: {"x": 0, "y":.6}
            id: led_state_label
            text: ""